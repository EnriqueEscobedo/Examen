<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.mx.consul.med.exam</groupId>
		<artifactId>CitasMedicas</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>CitasMedicasEAR</artifactId>
	<packaging>ear</packaging>
	<build>
		<pluginManagement>
			<plugins>
				<!-- Compiler Plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ear-plugin</artifactId>
					<configuration>
						<finalName>CitasMedicasEAR</finalName>
						<displayName>CitasMedicasEAR</displayName>

						<version>7</version>
						<defaultLibBundleDir>lib/</defaultLibBundleDir>
						<skinnyWars>true</skinnyWars>
						<modules>
							<webModule>
								<groupId>com.mx.consul.med.exam</groupId>
								<artifactId>CitasMedicasWEB</artifactId>
								<bundleFileName>CitasMedicasWEB.war</bundleFileName>
								<contextRoot>/CitasMedicas/</contextRoot>
							</webModule>
							<jarModule>
								<groupId>com.mx.consul.med.exam</groupId>
								<artifactId>CitasMedicasService</artifactId>
							</jarModule>
							<jarModule>
								<groupId>com.mx.consul.med.exam</groupId>
								<artifactId>CitasMedicasDAO</artifactId>
							</jarModule>
							<jarModule>
								<groupId>com.mx.consul.med.exam</groupId>
								<artifactId>CitasMedicasModel</artifactId>
							</jarModule>
						</modules>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.mx.consul.med.exam</groupId>
			<artifactId>CitasMedicasModel</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.mx.consul.med.exam</groupId>
			<artifactId>CitasMedicasDAO</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.mx.consul.med.exam</groupId>
			<artifactId>CitasMedicasService</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.mx.consul.med.exam</groupId>
			<artifactId>CitasMedicasWEB</artifactId>
			<version>1.0.0</version>
			<type>war</type>
		</dependency>
	</dependencies>
</project>